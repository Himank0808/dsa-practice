/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
 class Solution {
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        // Dummy node create karte hain
        ListNode dummy = new ListNode(-19);
        ListNode tail = dummy;

        // Jab dono list mein elements hain
        while (list1 != null && list2 != null) {
            if (list1.val < list2.val) {
                tail.next = list1;   // tail ko list1 attach karo
                list1 = list1.next;  // list1 aage badhao
            } else {
                tail.next = list2;   // tail ko list2 attach karo
                list2 = list2.next;  // list2 aage badhao
            }
            tail = tail.next; // tail ko aage le jao
        }

        // Agar list1 bachi hai
        while (list1 != null) {
            tail.next = list1;
            list1 = list1.next;
            tail = tail.next;
        }

        // Agar list2 bachi hai
        while (list2 != null) {
            tail.next = list2;
            list2 = list2.next;
            tail = tail.next;
        }

        return dummy.next; // dummy ka next hi merged list ka head hai
    }
}
